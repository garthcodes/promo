<h2>Show Promotion</h2>

<table style="width:100%">
  <tr>
    <th>Promo Code:</th>
    <td><%= @promotion.code %></td>
  </tr>
  <tr>
    <th>Start Date:</th>
    <td><%= @promotion.start_date %></td>
  </tr>
  <tr>
    <th>End Date:</th>
    <td><%= @promotion.end_date %></td>
  </tr>
  <tr>
    <th>Discount in cents:</th>
    <td><%= @promotion.discount %></td>
  </tr>
  <tr>
    <th>User Message:</th>
    <td><%= @promotion.user_message %></td>
  </tr>
  <tr>
    <th>Internal Message:</th>
    <td><%= @promotion.internal_message %></td>
  </tr>
  <% if @promotion.assigned? %>
    <tr>
      <th>Users:</th>
      <td><%= @promotion.users.pluck(:username).join(',') %></td>
    </tr>
  <% end %>
</table>
